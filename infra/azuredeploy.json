{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [
        "DEV",
        "QA",
        "STAGE",
        "PROD"
      ],
      "metadata": {
        "description": "The environment that the resources are being deployed to."
      }
    },
    "location": {
      "type": "string"
    }
  },
  "variables": {
    "planName": "[concat('asp-0a1b2c-', parameters('environment'))]",
    "webAppName": "[concat('app-0a1b2c-', parameters('environment'))]"
  },
  "resources": [
    {
      "apiVersion": "2020-12-01",
      "name": "[variables('planName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "kind": "app",
      "tags": {},
      "properties": {
        "perSiteScaling": false,
        "elasticScaleEnabled": false,
        "maximumElasticWorkerCount": 1,
        "isSpot": false,
        "reserved": false,
        "isXenon": false,
        "hyperV": false,
        "targetWorkerCount": 0,
        "targetWorkerSizeId": 0
      },
      "sku": {
        "name": "S1",
        "tier": "Standard",
        "size": "S1",
        "family": "S",
        "capacity": 1
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[variables('webAppName')]",
      "location": "[parameters('location')]",
      "tags": {},
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', variables('planName'))]"
      ],
      "kind": "app",
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(variables('webAppName'), '.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(variables('webAppName'), '.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
        "siteConfig": {
          "appSettings": [],
          "alwaysOn": true
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "apiVersion": "2020-12-01",
      "name": "[concat(variables('webAppName'), '/stage')]",
      "location": "East US",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('webAppName'))]"
      ],
      "kind": "app",
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[concat(variables('webAppName'), '-stage.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Standard"
          },
          {
            "name": "[concat(variables('webAppName'), '-stage.scm.azurewebsites.net')]",
            "sslState": "Disabled",
            "hostType": "Repository"
          }
        ],
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
        "siteConfig": {
          "appSettings": [],
          "alwaysOn": true
        }
      }
    }
  ],
  "outputs": {
    "output1": {
      "type": "string",
      "value": "[parameters('environment')]"
    },
    "webAppName": {
      "type": "string",
      "value": "[variables('webAppName')]"
    }
  }
}
